{
  "name": "express-knex-postgres",
  "version": "1.0.0",
  "description": "Code for quick setup for CRUD applications using express/knex/postgres",
  "main": "index.js",
  "scripts": {
    "start:prod": "node_modules/.bin/knex migrate:latest && node dist/src/server.js",
    "build:prod": "tsc",
    "watch": "nodemon",
    "db:migrate:make": "dotenv -- node_modules/.bin/knex migrate:make",
    "db:migrate:run": "dotenv -- node_modules/.bin/knex migrate:latest",
    "db:seed:make": "dotenv -- node_modules/.bin/knex seed:make",
    "db:seed:run": "dotenv -- node_modules/.bin/knex seed:run",
    "build": "tsc",
    "clean": "rimraf dist/",
    "test:unit": "dotenv -e .env.testing -- mocha -r ts-node/register -r dotenv/config \"src/**/*.spec.ts\" --exit",
    "test:e2e": "dotenv -e .env.testing -- mocha -r ts-node/register -r dotenv/config \"test/**/*.e2e-spec.ts\" --exit --timeout 10000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:migration": "dotenv -e env.testing --  node_modules/.bin/knex migrate:latest",
    "pretest": "npm run test:migration",
    "cover": "npm run cover:unit && npm run cover:report",
    "cover:unit": "nyc --silent npm run test:unit",
    "cover:integration": "nyc --silent --no-clean npm run test:e2e",
    "cover:report": "nyc report --reporter=lcov --reporter=text-summary",
    "lint": "tslint -p tsconfig.json",
    "copy-files": "copyfiles -e test/fixtures/*.ts -u 1 test/fixtures/**  dist/test",
    "lint:fix": "tslint --fix -p tsconfig.json 'src/**/*{.ts,.tsx}'",
    "lint:tests": "tslint -p tsconfig.json -c tslint.tests.json \"./src/**/*.spec.ts\" \"./test/**/*.ts\"",
    "lint:tests:fix": "tslint --fix -p tsconfig.json -c tslint.tests.json \"./src/**/*.spec.ts\" \"./test/**/*.ts\""
  },
  "dependencies": {
    "date-fns": "2.16.1",
    "dotenv": "^9.0.1",
    "dotenv-cli": "^4.0.0",
    "express": "4.17.1",
    "joi": "17.3.0",
    "knex": "0.21.13",
    "pg": "8.5.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.5",
    "uuid": "8.3.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/mocha": "8.0.3",
    "@types/morgan": "1.9.2",
    "@types/node": "14.14.6",
    "@types/pg": "7.14.7",
    "@types/supertest": "2.0.10",
    "@types/uuid": "8.3.0",
    "mocha": "8.2.0",
    "nock": "11.9.1",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "superagent-defaults": "0.1.14",
    "supertest": "5.0.0",
    "tslint": "^5.20.1",
    "tslint-clean-code": "^0.2.10",
    "tslint-config-standard": "^9.0.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-sonarts": "^1.9.0"
  }
}
